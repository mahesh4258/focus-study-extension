{
  "manifest_version": 3,
  "name": "Focus Study - Distraction Free YouTube",
  "version": "1.0",
  "description": "Transform YouTube into a learning platform and block distractions.",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.instagram.com/*",
    "*://*.facebook.com/*",
    "*://*.twitter.com/*",
    "*://*.x.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Focus Study"
  },
  "icons": {
  "16": "icons/icon16.png",
  "48": "icons/icon48.png",
  "128": "icons/icon128.png"
}
}